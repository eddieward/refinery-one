
<%= form_for @inquiry do |f| %>
  <%= render :partial => "/shared/admin/error_messages",
    :locals => {
    :object => @inquiry,
    :include_object_name => true
  } %>



  <table border="0" cellspacing="5">

    <tr>

      <td valign="top" colspan='5'></td>
    </tr>

    <tr class='bodytext'>
      <td <%= f.required_label :name %></td>
      <td  <%= f.required_label :email %></td>
    </tr>

    <tr class='bodytext'>

      <td <%= f.text_field :name %></td>
      <td <%= f.text_field :email %></td>
    </tr>

    <tr class='bodytext'>
      <td <%= f.label :company %></td>
      <td <%= f.label :phone %></td>
    </tr>


    <tr class='bodytext'>
      <td  <%= f.text_field :company %></td>
      <td <%= f.text_field :phone %></td>
    </tr>

    <tr class='bodytext'>
      <td <%= f.required_label :subject %></td>
    </tr>

    <tr class='bodytext'>

      <td  <%= f.text_field :subject %></td>

    </tr>

    <tr class='bodytext'>
      <td class='required' valign='top'><span>*</span>Ask Engel Tax:</td>
    </tr>

    <tr class='bodytext'>
      <td colspan='2'> <%= f.text_area :message, :rows => 8 %></td>

    </tr>

  </table>

  <%= f.submit t('.send') %>
  <%= link_to t('.privacy_policy'), "/pages/privacy-policy", :id => "privacy_link" if RefinerySetting.find_or_set(:show_contact_privacy_link, false) %>

<% end %>